
@{

    ViewBag.Title = "Ingreso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div style="margin-top:5%;" class="mainbox col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title text-center" style="font-size: 25px;"><strong>INGRESO</strong></div>
            </div>
            <div style="padding-top:30px;" class="panel-body">

                <!--Alerta contrseña combiada-->
                @if (ViewBag.mensaje != null)
                {
                    <div>
                        <div class="alert alert-dismissable alert-success">
                            <button type="button" class="close" data-dismiss="alert">
                                &times;
                            </button>
                            <center><strong>Aviso!</strong> @ViewBag.mensaje</center>
                        </div>
                    </div>
                }


                <!--Alerta credenciales incorrectas-->
                @if (ViewBag.Error != null)
                {
                    <div>
                        <div class="alert alert-dismissable alert-danger">
                            <button type="button" class="close" data-dismiss="alert">
                                &times;
                            </button>
                            <center><strong>Aviso!</strong> @ViewBag.Error</center>
                        </div>
                    </div>
                }

                <div style="padding-left:20px">

                    <form action="@Url.Content("/Auth/Login")" method="post">

                        <div style="margin-bottom: 25px" class="">
                            <label class="form-label">Usuario</label>
                            <input type="email" class="form-control" name="usuario">
                        </div>

                        <div style="margin-bottom: 25px" class="">
                            <label class="form-label">Contraseña</label>
                            <input type="password" class="form-control" name="password">
                        </div>
                </div>

                <div class="form-group">
                    <!-- Boton -->
                    <div class="col-sm-12 controls text-center">
                        <input type="submit" value="Ingresar" class="btn btn-primary" />
                    </div>
                </div>

                <div class="form-group">
                    <!-- Boton -->
                    <div class="col-sm-12 controls text-center" style="margin-top:10px;">
                        @Html.ActionLink("Olvide mi contraseña", "StartRecovery")
                    </div>
                </div>
            </div>



            <!--linea<div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">-->
        </div>
    </div>
</div>





