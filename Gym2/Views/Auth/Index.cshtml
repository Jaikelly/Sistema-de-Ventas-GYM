
@{
    ViewBag.Title = "Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div style="margin-top:5%;" class="mainbox col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title text-center" style="font-size: 25px;"><strong>Datos Usuario</strong></div>
            </div>
            <div style="padding-top:30px; padding-left: 0px;" class="panel-body">

                <div style="text-align: center;">
                    <label>RUT</label>
                    <p>@ViewBag.Rut</p>

                    <hr />
                    <label>Nombre</label>
                    <p>@ViewBag.Nombre @ViewBag.Apellido</p>

                    <label>Email</label>
                    <p>@ViewBag.Email</p>

                    <label>Telefono</label>
                    <p>@ViewBag.Telefono</p>

                    <label>Direccion</label>
                    <p>@ViewBag.Direccion</p>
                </div>
            </div>
        </div>
    </div>
</div>

@if (ViewBag.Venta1 != null)
{

    <div class="container-fluid">
        <div style="margin-top:5%; width:100%;" class="">
            <div class="panel panel-info">
                <div class="panel-heading">

                    <div class="panel-title text-center" style="font-size: 25px;">
                        <strong>Ventas</strong>
                    </div>

                </div>

                <table class="table table-hover active" style="width:100%;">
                    <thead>
                        <tr>
                            <th scope="col">Plan</th>
                            <th scope="col">Precio</th>
                            <th scope="col">Duración</th>
                            <th scope="col">Fecha inicio</th>
                            <th scope="col">Fecha termino</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in ViewBag.Venta1)
                        {
                            <tr>
                                <th>@item.Plan.nombre</th>
                                <th>@item.Plan.precio.ToString("$###,###,##0.00") </th>
                                <th>@item.Plan.duracion días</th>
                                <th>@item.fecha_inicio.ToString("dd/MM/yyyy")</th>
                                <th>@item.fecha_termino</th>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

}

