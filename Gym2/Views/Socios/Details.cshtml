@model Gym2.Models.Usuario

@{
    ViewBag.Title = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <div style="margin-top:5%;" class="mainbox col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title text-center" style="font-size: 25px;"><strong>Usuario: @Model.Rol.nombre</strong></div>
            </div>
            <div style="padding-top:30px; padding-left: 0px;" class="panel-body">
                <div class="row">

                    <div style="text-align: center;">
                        <label>RUT</label>
                        <p>@Model.rut</p>

                        <hr />
                        <label>Nombre</label>
                        <p>@Model.nombres @Model.apellidos</p>

                        <label>Fecha de Nacimiento</label>
                        <p>@Html.ValueFor(modelItem => modelItem.fech_nacimiento, "{0:dd/MM/yyyy}")</p>

                        <label>Email</label>
                        <p>@Model.email</p>

                        <label>Telefono</label>
                        <p>@Model.telefono</p>

                        <label>Direccion</label>
                        <p>@Model.direccion</p>

                    </div>
                </div>
            </div>
        </div>
        <div class="text-center" style="margin-top: 3%; margin-bottom: 5%">
            <button class="btn btn-success">Editar</button>
            <a href="../Index" class="btn btn-default">Volver</a>
        </div>
    </div>
</div>




@if (ViewBag.Venta1 != null)
{

    <div class="container-fluid">
        <div style="margin-top:5%; width:100%;" class="">
            <div class="panel panel-info">
                <div class="panel-heading">

                    <div class="panel-title text-center" style="font-size: 25px;">
                        <strong>Ventas</strong>
                    </div>

                </div>

                <table class="table table-hover active" style="width:100%;">
                    <thead>
                        <tr>
                            <th scope="col">Plan</th>
                            <th scope="col">Precio</th>
                            <th scope="col">Duración</th>
                            <th scope="col">Fecha inicio</th>
                            <th scope="col">Fecha termino</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in ViewBag.Venta1)
                        {
                        <tr>
                            <th>@item.Plan.nombre</th>
                            <th>@item.Plan.precio.ToString("$###,###,##0.00") </th>
                            <th>@item.Plan.duracion días</th>
                            <th>@item.fecha_inicio</th>
                            <th>@item.fecha_termino</th>
                            <td style="text-align: center">
                                @Html.ActionLink(" ", "../Venta/Editar", new { id = item.id }, new { @class = " glyphicon glyphicon-edit" }) |
                                @Html.ActionLink(" ", "../Venta/Delete", new { id = item.id }, new { @class = "glyphicon glyphicon-trash text-danger" })
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

}
